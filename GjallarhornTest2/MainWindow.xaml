<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:GjallarhornTest2;assembly=GjallarhornTest2"
        Title="GjallarhornTest2"
        MinWidth="300"
        MinHeight="100"
        d:DataContext="{x:Static model:Program.d}"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d">
    <StackPanel Margin="0,10,0,0">
        <TextBox Margin="5"
                 Text="{Binding Original, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Margin="5"
                   Text="{Binding Reverse, StringFormat=Reversed: {0}, Mode=OneWay}" />
        <Button Margin="5"
                Command="{Binding Add}"
                Content="Add" />
        <ListView MinHeight="100"
                  Margin="5"
                  Background="Beige"
                  ItemsSource="{Binding Items}" />
    </StackPanel>
</Window>